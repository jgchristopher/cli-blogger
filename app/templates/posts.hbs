<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <table class='table'>
                <thead>
                <tr><th>Recent Posts</th></tr>
                </thead>

                <tbody>
                {{#each blog in model}}

                    <tr>
                        <td>
                          {{#link-to 'post' blog}}{{blog.title}} <small class='muted'>by {{blog.author.name}}</small>{{/link-to}}
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>

        <div class="col-md-9">
          {{outlet}}
        </div>
    </div>
</div>
